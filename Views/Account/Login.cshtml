@using FormularioHelp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}


<title>Iniciar Sesión </title>
<style>
    /* Existing CSS from your previous code and new styles */
    body {
        background: linear-gradient(to right, #e0f7fa, #f1f8ff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
        display: flex;
        flex-direction: column; /* This is key to keep the navbar at the top */
    }

    /* New style to ensure the main content is centered vertically */
    .main-content {
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .navbar-top {
        /* Styles for your navbar if you're not using Bootstrap */
        /* If you are using Bootstrap, the default styles already handle this */
    }

    .login-container {
        max-width: 450px;
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.1);
        text-align: center; /* Center content inside the card */
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #007BFF;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
        color: #333;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        box-sizing: border-box;
        margin-bottom: 20px;
        background-color: #fefefe;
    }

    .btn-register {
        background-color: #007BFF;
        color: white;
        font-size: 16px;
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .btn-register:hover {
            background-color: #0056b3;
        }

    /* NEW BUTTON STYLE */
    .btn-login {
        background-color: #007BFF;
        color: white;
        font-size: 16px;
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-decoration: none; /* remove underline from link */
        display: inline-block; /* make it behave like a button */
    }

        .btn-login:hover {
            background-color: #0056b3;
            transform: translateY(-2px); /* a little lift on hover */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .form-group-inline {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .form-group-inline label {
            margin-right: 15px;
            min-width: 120px;
            text-align: right;
            font-weight: bold;
        }

        .form-group-inline .form-control {
            flex: 1;
        }
        .form-group-inline {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.form-group-inline label {
    /* Agrega estas dos propiedades */
    min-width: 150px;      /* Establece un ancho fijo para todas las etiquetas */
    text-align: right;     /* Alinea el texto de la etiqueta a la derecha */
    
    margin-right: 15px;    /* Espacio entre la etiqueta y el campo de entrada */
    font-weight: bold;
    color: #333;
}

.form-group-inline .form-control {
    flex: 1;               /* Hace que el campo de entrada ocupe el resto del espacio */
}


</style>

   
    <div class="main-content">
        <div class="login-container">
            <h2 id="title">Iniciar sesión.</h2>
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group-inline">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group-inline">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group-inline" style="justify-content: center;">
                        <div class="checkbox d-flex align-items-center">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @style = "margin-left: 5px; margin-bottom: 0;" })
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                       <center> <input type="submit" value="Iniciar sesión" class="btn btn-login" /> </center>
                    </div>
                    <div class="text-center mt-3">
                        <p>
                            @Html.ActionLink("Registrarse como usuario nuevo", "Register")
                            @* Habilite esta opción una vez tenga la confirmación de la cuenta habilitada para la funcionalidad de restablecimiento de contraseña
                            *@
                        </p>
                    </div>
                }
            </section>
       </div>
        </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
