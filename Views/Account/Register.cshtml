@model FormularioHelp.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}


<style>
    body {
        background: linear-gradient(to right, #F7EBD2);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    .register-container {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #007BFF;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
        color: #333;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        box-sizing: border-box;
        margin-bottom: 20px;
        background-color: #fefefe;
    }

    .btn-register {
        background-color: #007BFF;
        color: white;
        font-size: 16px;
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .btn-register:hover {
            background-color: #0056b3;
        }

    .text-danger {
        font-size: 14px;
        color: red;
        margin-bottom: 10px;
    }
</style>
<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
       
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            <div class="mb-3 d-flex align-items-center">
                <label class="me-3 mb-0" style="min-width: 150px;">Ingresa tu email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "flex: 1;" })
            </div>
            <div class="mb-3 d-flex align-items-center">
                <label class="me-3 mb-0" style="min-width: 150px;">Contraseña</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "flex: 1;" })
            </div>
            <div class="mb-3 d-flex align-items-center">
                <label class="me-3 mb-0" style="min-width: 150px;">Confirmar contraseña</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "flex: 1;" })
            </div>
            <div class="d-flex justify-content-center mt-4">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
    }

    

</main>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
