@model FormularioHelp.Models.Respuestas

@{
    ViewBag.Title = "Delete";
}

<style>

    body {
        background: linear-gradient(to bottom, #FFCFE5);
        margin: 0;
        padding: 0;
        color: #FFCFE5;
        min-height: 100vh; /* Asegura que el degradado cubra toda la altura de la página */
    }

    /* Estilo para el título h2 */
    h2 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 700;
        font-size: 2.2rem;
        color: #a46330; /* marrón cálido */
        text-shadow: 1px 1px 3px rgba(164, 99, 48, 0.4);
        margin-bottom: 24px;
        border-bottom: 3px solid #f2bfa4; /* línea decorativa melocotón */
        padding-bottom: 8px;
        letter-spacing: 0.05em;
        
    }

    /* Estilo para la lista de definiciones */
    dl.dl-horizontal {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #fff8f0;
        border-radius: 8px;
        padding: 20px 30px;
        box-shadow: 0 4px 12px rgba(165, 105, 60, 0.15);
        max-width: 600px;
        margin-bottom: 30px;
        color: #5b3a1a;
    }

        dl.dl-horizontal dt {
            font-weight: 700;
            margin-top: 12px;
            color: #a46330;
            width: 150px;
            float: left;
            clear: left;
            letter-spacing: 0.03em;
        }

        dl.dl-horizontal dd {
            margin-left: 160px;
            margin-bottom: 12px;
            color: #4a2c12;
        }

    /* Estilo para el contenedor de botones */
    .form-actions {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .form-actions input,
        .form-actions a {
            text-decoration: none;
            padding: 8px 18px;
            margin-right: 10px;
            border-radius: 8px;
            font-size: 1em;
            font-weight: 600;
            box-shadow: 0 4px 8px rgba(165, 105, 60, 0.25);
            color: #5b3a1a;
            border: 2px solid transparent;
            transition: background-color 0.3s ease, box-shadow 0.3s ease, transform 0.15s ease;
            user-select: none;
            display: inline-block;
            cursor: pointer;
            background-color: #f5cda7;
            border-color: #f0b775;
        }

            .form-actions input[type="submit"]:hover,
            .form-actions input[type="submit"]:focus {
                background-color: #e1b17b;
                box-shadow: 0 6px 14px rgba(225, 177, 123, 0.6);
                color: #3b1f00;
                transform: translateY(-2px);
                border-color: #c18e4f;
            }

        .form-actions a {
            background-color: #f2bfa4;
            border-color: #e6a87f;
            color: #5b3a1a;
        }

            .form-actions a:hover,
            .form-actions a:focus {
                background-color: #dba482;
                box-shadow: 0 6px 14px rgba(219, 164, 130, 0.6);
                color: #3b1f00;
                transform: translateY(-2px);
                border-color: #b37a52;
            }
            
           
</style>

<center><h2>Borrar respuestas</h2></center>

<center>
    <div>

        <hr />

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Q1)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Q1)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Q2)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Q2)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Q3)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Q3)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Q4)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Q4)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Q5)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Q5)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Total)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Total)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fecha)
            </dd>

        </dl>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Borrar" class="btn btn-default"
               onclick="if(confirm('¿Seguro que quieres eliminar esta respuesta?')) {
                    this.style.backgroundColor = '#dc3545'; 
                    this.style.color = '#fff'; 
                    return true; 
                } else {
                    return false;
                }" />

        @Html.ActionLink("Registros", "Index")
    </div>
        }
    </div>
</center>







