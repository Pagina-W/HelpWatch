@model IEnumerable<FormularioHelp.Models.Respuestas>

@{
    ViewBag.Title = "Index";
}


<style>

    body {
        background: linear-gradient(to bottom, #FFCFE5);
        margin: 0;
        padding: 0;
        color: #FFCFE5;
        min-height: 100vh; /* Asegura que el degradado cubra toda la altura de la página */
    }

   
    h2 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 700;
        font-size: 2.2rem;
        color: #a46330; /* marrón cálido */
        text-shadow: 1px 1px 3px rgba(164, 99, 48, 0.4);
        margin-bottom: 24px;
        border-bottom: 3px solid #f2bfa4; /* línea decorativa melocotón */
        padding-bottom: 8px;
        letter-spacing: 0.05em;
    }


    /* Tabla */
    table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        box-shadow: 0 4px 10px rgba(165, 105, 60, 0.15);
        border-radius: 8px;
        overflow: hidden;
        background: #fff8f0; /* fondo cálido muy suave */
    }

    thead tr {
        background-color: #d9986f; /* marrón claro cálido */
        color: #4a2c12; /* marrón oscuro para texto */
        text-align: left;
        font-weight: 600;
        letter-spacing: 0.05em;
        box-shadow: inset 0 -3px 5px rgba(74, 44, 18, 0.2);
    }

    th {
        padding: 12px 18px;
        border-bottom: 1px solid #f1d7bb; /* borde suave */
        transition: background-color 0.3s ease;
    }

    tbody tr:nth-child(even) {
        background-color: #f7e6d4; /* beige claro */
    }

    tbody tr:hover {
        background-color: #f3d9b6; /* beige un poco más fuerte al hover */
    }

    /* Botones */
    .btn-group a {
        text-decoration: none;
        padding: 7px 14px;
        margin-right: 8px;
        border-radius: 6px;
        font-size: 0.95em;
        font-weight: 600;
        color: #5b3a1a; /* marrón oscuro para texto */
        box-shadow: 0 2px 6px rgba(165, 105, 60, 0.3);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        display: inline-block;
        user-select: none;
    }

        .btn-group a.edit {
            background-color: #f5cda7; /* melocotón claro */
        }

            .btn-group a.edit:hover {
                background-color: #e1b17b;
                box-shadow: 0 4px 12px rgba(225, 177, 123, 0.6);
                color: #3b1f00;
            }

        .btn-group a.details {
            background-color: #f2bfa4; /* coral suave */
        }

            .btn-group a.details:hover {
                background-color: #dba482;
                box-shadow: 0 4px 12px rgba(219, 164, 130, 0.6);
                color: #3b1f00;
            }

        .btn-group a.delete {
            background-color: #e6a57e; /* terracota suave */
        }

            .btn-group a.delete:hover {
                background-color: #b87c54;
                box-shadow: 0 4px 12px rgba(184, 124, 84, 0.6);
                color: #fff8f0;
            }


</style>

<center><h2>Registros</h2></center>


<table class="table">
    <tr>
        <th>R1</th>
        <th>R2</th>
        <th>R3</th>
        <th>R4</th>
        <th>R5</th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Q1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Q2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Q3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Q4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Q5)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>

                @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
