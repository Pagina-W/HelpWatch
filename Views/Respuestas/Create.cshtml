@model FormularioHelp.Models.Respuestas

@{
    ViewBag.Title = "Autoevaluación de Ansiedad";
}


            <style>
                body {
                    background: #f0f4f8;
                    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                    display: flex;
                    justify-content: center;
                    padding: 40px 10px;
                }

                form {
                    background: #fff;
                    padding: 30px 40px;
                    border-radius: 10px;
                    box-shadow: 0 6px 18px rgba(0,0,0,0.1);
                    max-width: 450px;
                    width: 100%;
                }

                h2 {
                    text-align: center;
                    color: #333;
                    margin-bottom: 25px;
                    letter-spacing: 1.2px;
                }

                label {
                    font-weight: 600;
                    color: #444;
                    display: block;
                    margin-bottom: 8px;
                    margin-top: 20px;
                }

                select {
                    width: 100%;
                    padding: 8px 12px;
                    border-radius: 6px;
                    border: 1.5px solid #ccc;
                    font-size: 1rem;
                    transition: border-color 0.3s ease;
                }

                    select:focus {
                        border-color: #007BFF;
                        outline: none;
                    }

                button {
                    margin-top: 30px;
                    width: 100%;
                    background: #007BFF;
                    border: none;
                    padding: 12px 0;
                    border-radius: 8px;
                    font-size: 1.1rem;
                    color: white;
                    font-weight: 700;
                    letter-spacing: 1.5px;
                    cursor: pointer;
                    transition: background-color 0.3s ease;
                }

                    button:hover {
                        background: #0056b3;
                    }

                #resultado {
                    margin-top: 25px;
                    font-weight: 700;
                    text-align: center;
                }
            </style>
       

            <form id="ansiedad-form">
                <h2>Autoevaluación de Ansiedad</h2>

                <label>1. ¿Te sientes nervioso(a) a menudo?</label>
                <select name="q1" required>
                    <option value="">Selecciona...</option>
                    <option value="0">Nunca</option>
                    <option value="1">A veces</option>
                    <option value="2">Frecuentemente</option>
                    <option value="3">Siempre</option>
                </select>

                <label>2. ¿Te cuesta controlar tus preocupaciones?</label>
                <select name="q2" required>
                    <option value="">Selecciona...</option>
                    <option value="0">Nunca</option>
                    <option value="1">A veces</option>
                    <option value="2">Frecuentemente</option>
                    <option value="3">Siempre</option>
                </select>

                <label>3. ¿Te es difícil relajarte?</label>
                <select name="q3" required>
                    <option value="">Selecciona...</option>
                    <option value="0">Nunca</option>
                    <option value="1">A veces</option>
                    <option value="2">Frecuentemente</option>
                    <option value="3">Siempre</option>
                </select>

                <label>4. ¿Tu ansiedad afecta tu concentración?</label>
                <select name="q4" required>
                    <option value="">Selecciona...</option>
                    <option value="0">Nunca</option>
                    <option value="1">A veces</option>
                    <option value="2">Frecuentemente</option>
                    <option value="3">Siempre</option>
                </select>

                <label>5. ¿Te sientes irritable o tenso(a)?</label>
                <select name="q5" required>
                    <option value="">Selecciona...</option>
                    <option value="0">Nunca</option>
                    <option value="1">A veces</option>
                    <option value="2">Frecuentemente</option>
                    <option value="3">Siempre</option>
                </select>

                <button type="submit">Enviar</button>
            </form>

            <p id="resultado"></p>

            <script>
                document.getElementById('ansiedad-form').addEventListener('submit', function (e) {
  e.preventDefault();

  const form = e.target;
  let total = 0;

  for(let i=1; i<=5; i++) {
    const value = parseInt(form['q'+i].value);
    total += value;
  }

  const resultado = document.getElementById('resultado');

  if (total <= 4) {
    resultado.textContent = 'Tu nivel de ansiedad es bajo.';
    resultado.style.color = 'green';
  } else if (total <= 9) {
    resultado.textContent = 'Tu nivel de ansiedad es moderado.';
    resultado.style.color = 'orange';
  } else {
    resultado.textContent = 'Tu nivel de ansiedad es alto. Considera buscar ayuda profesional.';
    resultado.style.color = 'red';
  }
});</script>

        

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
